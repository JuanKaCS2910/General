@model PagedList.IPagedList<Domain.Entities.Mantenimiento.EDistritoView>
@using PagedList.Mvc
@{
    ViewBag.Title = "Distrito";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Distrito</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div></div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">

            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li class="active"><a class="nav-link active" data-toggle="tab" href="#tab-1"> Lista</a></li>
                    @*<li><a class="nav-link" data-toggle="tab" href="#tab-2">Detalle</a></li>*@
                </ul>
            </div>

            <div class="tab-content">
                <div id="tab-1" class="tab-pane active">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Registro <small>De Distrito</small></h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                            </div>
                        </div>

                        <div class="ibox-content">

                            <div class="row">
                                <div class="col-xs-12 col-md-12">
                                    <div class="col-xs-12 col-md-3">
                                        @Html.LabelFor(model => Model.FirstOrDefault().Nombre, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-xs-12 col-md-3">
                                        <div>
                                            @*<input type="text" class="form-control col-xs-12 col-md-3" id="Nombres" value="">*@
                                            @Html.EditorFor(model => Model.FirstOrDefault().RegistroNombre, new { htmlAttributes = new { @class = "form-control col-xs-12 col-md-3" } })
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-md-6">
                                        <div>
                                            <input id="btnCreate" value="Create" class="btn btn-primary" />
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="ibox-content-change">
                            <div class="row">
                                <div class="ibox-title">
                                    <h5>Filtros</h5>

                                </div>
                                <div class="col-xs-12 col-md-12">
                                    <div class="col-xs-12 col-md-3">
                                        @Html.LabelFor(model => Model.FirstOrDefault().Nombre, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-xs-12 col-md-3">
                                        <div>
                                            @Html.EditorFor(model => Model.FirstOrDefault().FiltroNombre, new { htmlAttributes = new { @class = "form-control col-xs-12 col-md-3" } })
                                            @*@Html.EditorFor(model => model.FirstOrDefault().Nombre, new { htmlAttributes = new { @class = "form-control" } })*@
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-md-6">
                                        <div>
                                            <input type="submit" value="Filter" class="btn btn-info" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <br />

                            <div class="row">
                                <div class="col-xs-12 col-md-12">

                                    <table class="table">
                                        <tr class="GrillaPage">
                                            <th class="col-xs-12 col-md-6">
                                                <div class="row">
                                                    <div class="col-xs-12 col-md-2">Mostrar</div>
                                                    <div class="col-xs-12 col-md-5">
                                                        <select name="ChangeRow" id="ChangeRow" style="height:40px;width:150px;" class="form-control ">
                                                            <option value="10" selected>10</option>
                                                            <option value="25">25</option>
                                                            <option value="50">50</option>
                                                            <option value="100">100</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-xs-12 col-md-5"></div>
                                                </div>
                                            </th>
                                            <th class="col-xs-12 col-md-2"></th>
                                            <th class="col-xs-12 col-md-3">
                                            </th>
                                            <th class="col-xs-12 col-md-1">
                                                <a href="@Url.Action("Index", "Distrito")" class="btn btn-success">
                                                    <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                                                </a>
                                            </th>
                                        </tr>
                                        <tr class="EstiloCabecera">
                                            <th class="col-xs-12 col-md-4">
                                                @Html.DisplayNameFor(model => Model.FirstOrDefault().Nombre)
                                            </th>
                                            <th class="col-xs-12 col-md-3"></th>
                                            <th class="col-xs-12 col-md-4"></th>
                                            <th class="col-xs-12 col-md-1"></th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="col-xs-12 col-md-6">
                                                    @Html.DisplayFor(modelItem => item.Nombre)
                                                </td>
                                                <td class="col-xs-12 col-md-3">
                                                    @Html.ActionLink("Edit", "Edit", new { distritoId = item.DistritoId, departamentoId = item.DepartamentoId }, new { @class = "btn btn-info" })

                                                    <input type="button" onclick="Delete(this)" id="btnDelete"
                                                           data-assigned-id="@item.DistritoId" class="btn btn-danger" value="Delete" />
                                                </td>
                                                <td class="col-xs-12 col-md-2"></td>
                                                <td class="col-xs-12 col-md-1"></td>
                                            </tr>
                                        }

                                        <tr class="EstiloCabecera">

                                            <th class="col-xs-12 col-md-6">
                                                Página: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de: @Model.PageCount
                                                @Html.PagedListPager(Model, page => Url.Action("Index", new
                                                {
                                                    page,
                                                    sortOrder = ViewBag.CurrentSort,
                                                    currentFilter = ViewBag.CurrentFilter
                                                }))
                                                Cantidad de Registros: @Model.TotalItemCount
                                                @*View: @ViewBag.Cantidad*@
                                            </th>
                                            <th class="col-xs-12 col-md-3">
                                            </th>
                                            <th class="col-xs-12 col-md-2">
                                            </th>
                                            <th class="col-xs-12 col-md-1">
                                                <a href="@Url.Action("Index", "Distrito")" class="btn btn-success">
                                                    <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                                                </a>
                                            </th>
                                        </tr>

                                    </table>
                                </div>
                            </div>

                        </div>
                        @*< !--Model Popup starts Correct-- >*@

                        <div class="container">
                            <div class="row">
                                <div class="modal fade" id="success" role="dialog">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="" id="btncancelar"><span>×</span></button>
                                            </div>

                                            <div class="modal-body">

                                                <div class="thank-you-pop">
                                                    <div class="row">
                                                        <img style="align-content:center" src="http://goactionstations.co.uk/wp-content/uploads/2017/03/Green-Round-Tick.png" alt="">
                                                    </div>
                                                    <h1>
                                                        <span id="SuccessResult"></span>
                                                    </h1>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Model Popup ends-->

                        <!--Model Popup starts Incorrecto-->
                        <div class="container">
                            <div class="row">
                                <div class="modal fade" id="error" role="dialog">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label=""><span>×</span></button>
                                            </div>

                                            <div class="modal-body">

                                                <div class="thank-you-pop">
                                                    <div class="row">
                                                        <img src="~/Content/Iconos/error.png" alt="">
                                                    </div>

                                                    <h1>Ocurrió un error al momento de registrar</h1>
                                                    <h3 class="cupon-pop">
                                                        Error : <span id="ErrorResult"></span>
                                                    </h3>

                                                </div>

                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Model Popup ends-->

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script type="text/javascript">

        

        $(document).ready(function () {

            $("#ChangeRow").change(function () {

                CargarGrilla();
 
            });

            $("#btnCreate").click(function () {

                var EDistrito = {
                    Nombre: $("#RegistroNombre").val(),
                    DepartamentoId: 1
                };

                var Grilla = {
                    page: 0,
                    countrow: 0
                };

                $.ajax({
                    url: '../Distrito/Grabar',
                    type: 'POST',
                    data: JSON.stringify(EDistrito),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        //aqui redireccionas
                        if (data != null) {
                            if (data.Resultado == "OK") {
                                //window.location = "/Distrito/Index/";
                                $("#success").modal('show');
                                $("#SuccessResult").text('El registro se grabo exitosamente');
                                //$.ajax({
                                //    url: "../Distrito/Index",
                                //    data: JSON.stringify(Grilla),
                                //    type: 'GET',
                                //    success: function (result) {
                                //        do the necessary updations
                                //    },
                                //    error: function (result) {

                                //    }
                                //});

                            }
                            else {
                                $("#ErrorResult").text(data.Resultado);
                                $("#error").modal('show');

                            }
                        }

                    },
                    error: function (request, status, error) {

                        $("#error").modal('show');
                        $("#ErrorResult").text();
                        //debugger;
                        //alert(request.responseText);
                    },

                });
                
            });
        });
        
        function Delete(id) {
            var resultado = {
                distritoId: $(id).data('assigned-id')
            };

            $.ajax({
                url: '../Distrito/Delete',
                type: 'POST',
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(resultado),
                success: function (data) {
                    //aqui redireccionas
                    if (data != null) {
                        if (data.Resultado == "OK") {
                            $("#success").modal('show');
                            $("#SuccessResult").text('Se elimino satisfactoriamente el registro');
                            CargarGrilla();
                        }
                        else {
                            $("#ErrorResult").text(data.Resultado);
                            $("#error").modal('show');
                        }
                    }
                },
                error: function (request, status, error) {
                    debugger;
                    $("#error").modal('show');
                    $("#ErrorResult").text();
                    debugger;
                    //alert(request.responseText);
                },

            });

        }

        function CargarGrilla() {
            var paginacion = {
                countrow: $("#ChangeRow").val()
            };

            $.ajax({
                url: '../Distrito/Index',
                type: 'POST',
                data: JSON.stringify(paginacion),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    alert(data);
                },
                error: function (request, status, error) {
                    //debugger;
                    //alert("request : " + request);
                    //alert("status : " + status);
                    //alert("error : " + error);
                    //alert("error");
                },
            });
        }

    </script>


}


