@model PagedList.IPagedList<Domain.Entities.Mantenimiento.EDistritoView>
@using PagedList.Mvc
@{
    ViewBag.Title = "Distrito";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Distrito</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div></div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">

            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li class="active"><a class="nav-link active" data-toggle="tab" href="#tab-1"> Lista</a></li>
                    @*<li><a class="nav-link" data-toggle="tab" href="#tab-2">Detalle</a></li>*@
                </ul>
            </div>

            <div class="tab-content">
                <div id="tab-1" class="tab-pane active">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Registro <small>De Distrito</small></h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                            </div>
                        </div>

                        <div class="ibox-content">

                            <div class="row">
                                <div class="col-xs-12 col-md-12">
                                    <div class="col-xs-12 col-md-3">
                                        @Html.LabelFor(model => Model.FirstOrDefault().Nombre, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-xs-12 col-md-3">
                                        <div>
                                            @*<input type="text" class="form-control col-xs-12 col-md-3" id="Nombres" value="">*@
                                            @Html.EditorFor(model => Model.FirstOrDefault().RegistroNombre, new { htmlAttributes = new { @class = "form-control col-xs-12 col-md-3" } })
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-md-6">
                                        <div>
                                            <input id="btnCreate" value="Create" class="btn btn-primary" />
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="ibox-content-change">
                            <div class="row">
                                <div class="ibox-title">
                                    <h5>Filtros</h5>

                                </div>
                                <div class="col-xs-12 col-md-12">
                                    <div class="col-xs-12 col-md-3">
                                        @Html.LabelFor(model => Model.FirstOrDefault().Nombre, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-xs-12 col-md-3">
                                        <div>
                                            @Html.EditorFor(model => Model.FirstOrDefault().FiltroNombre, new { htmlAttributes = new { @class = "form-control col-xs-12 col-md-3" } })
                                            @*@Html.EditorFor(model => model.FirstOrDefault().Nombre, new { htmlAttributes = new { @class = "form-control" } })*@
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-md-6">
                                        <div>
                                            <input type="submit" value="Filter" class="btn btn-info" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <br />

                            <div class="row">
                                <div class="col-xs-12 col-md-12">

                                    <table class="table">
                                        <tr style="color: #000000;background-color: #eee">
                                            <th>
                                                @Html.DisplayNameFor(model => Model.FirstOrDefault().Nombre)
                                            </th>
                                            <th></th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Nombre)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-info" })
                                                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-warning" })
                                                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-danger" })
                                                </td>
                                            </tr>
                                        }

                                        <tr style="color: #000000;background-color: #eee">
                                            <th>
                                                @Html.DisplayNameFor(model => model.FirstOrDefault().Nombre)
                                            </th>
                                            <th></th>
                                        </tr>

                                    </table>

                                    Página: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de: @Model.PageCount
                                    @Html.PagedListPager(Model, page => Url.Action("Index", new
                                    {
                                        page,
                                        sortOrder = ViewBag.CurrentSort,
                                        currentFilter = ViewBag.CurrentFilter
                                    }))
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>


            <!--Model Popup starts Correct-->
            <div class="container">
                <div class="row">
                        
                    <div class="modal fade" id="success" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label=""><span>×</span></button>
                                    </div>
					
                                <div class="modal-body">
                       
						            <div class="thank-you-pop" >
                                        <div class="row">
                                            <img style="align-content:center" src="http://goactionstations.co.uk/wp-content/uploads/2017/03/Green-Round-Tick.png" alt="">
                                        </div>
							            
							            <h1>El registro se grabo exitosamente</h1>
							            @*<p>Your submission is received and we will contact you soon</p>
							            <h3 class="cupon-pop">Your Id: <span>12345</span></h3>*@
							
 						            </div>
                         
                                </div>
					
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Model Popup ends-->

            <!--Model Popup starts Correct-->
            <div class="container">
                <div class="row">
                        
                    <div class="modal fade" id="error" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label=""><span>×</span></button>
                                    </div>
					
                                <div class="modal-body">
                       
						            <div class="thank-you-pop" >
                                        <div class="row">
                                            <img src="~/Content/Iconos/error.png" alt="">
                                        </div>
							            
							            <h1>Ocurrió un error al momento de registrar</h1>
							            @*<p>Your submission is received and we will contact you soon</p>
							            <h3 class="cupon-pop">Your Id: <span>12345</span></h3>*@
							
 						            </div>
                         
                                </div>
					
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Model Popup ends-->

        </div>
    </div>

</div>

@section Scripts
{
    <script type="text/javascript">

        $(document).ready(function () {
            //document.getElementById("modal-form").style.display = "none";
            $("#btnCreate").click(function () {
                //$("#ignismyModal").modal('show');
                
                
                var EDistrito = {
                    Nombre: $("#RegistroNombre").val(),
                    DepartamentoId: 1
                };

                $.ajax({
                    url: '../Distrito/Grabar',
                    type: 'POST',
                    data: JSON.stringify(EDistrito),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        $("#success").modal('show');
                        //$("#modal-form")

                        //$("#modal-form").click(function () {
                            
                        //});
                        //aqui redireccionas
                    },
                    error: function (request, status, error) {
                        $("#error").modal('show');
                        debugger;
                        //alert(request.responseText);
                    },

                });
                
                //alert("dddd" + $("#Nombre").val());
            });
        });
    </script>


}


