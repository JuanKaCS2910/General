@model PagedList.IPagedList<Domain.Entities.Mantenimiento.EDistrito>
@using PagedList.Mvc
@{
    ViewBag.Title = "Distrito";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Distrito</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">

            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li class="active"><a class="nav-link active" data-toggle="tab" href="#tab-1"> Lista</a></li>
                    @*<li><a class="nav-link" data-toggle="tab" href="#tab-2">Detalle</a></li>*@
                </ul>
            </div>

            <div class="tab-content">
                <div id="tab-1" class="tab-pane active">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Registro <small>De Distrito</small></h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                            </div>
                        </div>
                        <div  class="ibox-content">
                            <div class="row">
                                <div class="col-xs-12 col-md-12">
                                    <div class="col-xs-12 col-md-3">
                                        @Html.LabelFor(model => Model.FirstOrDefault().Nombre, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-xs-12 col-md-3">
                                        <div>
                                            <input type="text" class="form-control" value="">
                                            @*@Html.EditorFor(model => model.FirstOrDefault().Nombre, new { htmlAttributes = new { @class = "form-control col-xs-12 col-md-3" } })*@
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-md-6">
                                        <div>
                                            @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-primary" })
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="ibox-content-change">
                            <div class="row">
                                <div class="ibox-title">
                                    <h5>Filtros</h5>
                                    
                                </div>
                                <div class="col-xs-12 col-md-12">
                                    <div class="col-xs-12 col-md-3">
                                        @Html.LabelFor(model => Model.FirstOrDefault().Nombre, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-xs-12 col-md-3">
                                        <div>

                                            @Html.EditorFor(model => model.FirstOrDefault().Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-md-6">
                                        <div>
                                            <input type="submit" value="Filter" class="btn btn-info" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <br />

                            <div class="row">
                                <div class="col-xs-12 col-md-12">

                                    <table class="table">
                                        <tr style="color: #000000;background-color: #eee">
                                            <th>
                                                @Html.DisplayNameFor(model => model.FirstOrDefault().Nombre)
                                            </th>
                                            <th></th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Nombre)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-info" })
                                                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-warning" })
                                                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-danger" })
                                                </td>
                                            </tr>
                                        }

                                        <tr style="color: #000000;background-color: #eee">
                                            <th>
                                                @Html.DisplayNameFor(model => model.FirstOrDefault().Nombre)
                                            </th>
                                            <th></th>
                                        </tr>

                                    </table>

                                    Página: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de: @Model.PageCount
                                    @Html.PagedListPager(Model, page => Url.Action("Index", new
                                    {
                                        page,
                                        sortOrder = ViewBag.CurrentSort,
                                        currentFilter = ViewBag.CurrentFilter
                                    }))
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>


        </div>
    </div>

</div>



