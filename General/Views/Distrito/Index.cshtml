@model PagedList.IPagedList<Domain.Entities.Mantenimiento.EDistritoView>
@using PagedList.Mvc
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Distrito";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Distrito</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div></div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">

            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li class="active"><a class="nav-link active" data-toggle="tab" href="#tab-1"> Lista</a></li>
                    @*<li><a class="nav-link" data-toggle="tab" href="#tab-2">Detalle</a></li>*@
                </ul>
            </div>

            <div class="tab-content">
                <div id="tab-1" class="tab-pane active">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Registro <small>De Distrito</small></h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                            </div>
                        </div>

                        <div class="ibox-content">

                            <div class="row">
                                <div class="col-xs-12 col-md-12">
                                    <div class="col-xs-12 col-md-3">
                                        @Html.LabelFor(model => Model.FirstOrDefault().Nombre, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-xs-12 col-md-3">
                                        <div>
                                            @*<input type="text" class="form-control col-xs-12 col-md-3" id="Nombres" value="">*@
                                            @Html.EditorFor(model => Model.FirstOrDefault().RegistroNombre, new { htmlAttributes = new { @class = "form-control col-xs-12 col-md-3" } })
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-md-6">
                                        <div>
                                            <input id="btnCreate" value="Grabar" class="btn btn-primary" />
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="ibox-content-change">
                            <div class="row">
                                <div class="ibox-title">
                                    <h5>Listado de Distrito</h5>
                                </div>
                            </div>
                            @*<div class="row">
                                    <div class="ibox-title">
                                        <h5>Filtros</h5>

                                    </div>
                                    <div class="col-xs-12 col-md-12">
                                        <div class="col-xs-12 col-md-3">
                                            @Html.LabelFor(model => Model.FirstOrDefault().Nombre, htmlAttributes: new { @class = "control-label" })
                                        </div>
                                        <div class="col-xs-12 col-md-3">
                                            <div>
                                                @Html.EditorFor(model => Model.FirstOrDefault().FiltroNombre, new { htmlAttributes = new { @class = "form-control col-xs-12 col-md-3" } })
                                            </div>
                                        </div>

                                        <div class="col-xs-12 col-md-6">
                                            <div>
                                                <input type="submit" value="Filter" class="btn btn-info" />
                                            </div>
                                        </div>
                                    </div>
                                </div>*@

                            <br />

                            <div class="row">
                                <div class="col-xs-12 col-md-12">

                                    <table id="tblGrilla" class="table table-striped table-bordered table-hover dataTables-example">
                                        @*<tr class="GrillaPage">
                                                <th class="col-xs-12 col-md-6">
                                                    <div class="row">
                                                        <div class="col-xs-12 col-md-2">Mostrar</div>
                                                        <div class="col-xs-12 col-md-5">
                                                            <select name="ChangeRow" id="ChangeRow" style="height:40px;width:150px;" class="form-control ">
                                                                <option value="10" selected>10</option>
                                                                <option value="25">25</option>
                                                                <option value="50">50</option>
                                                                <option value="100">100</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-xs-12 col-md-5"></div>
                                                    </div>
                                                </th>
                                                <th class="col-xs-12 col-md-2"></th>
                                                <th class="col-xs-12 col-md-3"></th>
                                                <th class="col-xs-12 col-md-1">
                                                    <a href="@Url.Action("Index", "Distrito")" class="btn btn-success">
                                                        <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                                                    </a>
                                                </th>
                                            </tr>*@
                                        <thead>
                                            <tr class="EstiloCabecera">
                                                <th class="col-xs-12 col-md-4">
                                                    @Html.DisplayNameFor(model => Model.FirstOrDefault().Nombre)
                                                </th>
                                                <th class="col-xs-12 col-md-3"></th>
                                                <th class="col-xs-12 col-md-4"></th>
                                                <th class="col-xs-12 col-md-1"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td class="col-xs-12 col-md-6">
                                                        @Html.DisplayFor(modelItem => item.Nombre)
                                                    </td>
                                                    <td class="col-xs-12 col-md-3">
                                                        <input type="button" onclick="Edit(this)" id="btnEdit"
                                                               data-assigned-id="@item.DistritoId" class="btn btn-info" value="Modificar" />

                                                        <input type="button" onclick="Delete(this)" id="btnDelete"
                                                               data-assigned-id="@item.DistritoId" class="btn btn-danger" value="Delete" />
                                                    </td>
                                                    <td class="col-xs-12 col-md-2"></td>
                                                    <td class="col-xs-12 col-md-1"></td>
                                                </tr>
                                            }

                                            @*<tr class="EstiloCabecera">

                                                    <th class="col-xs-12 col-md-6">
                                                        Página: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de: @Model.PageCount
                                                        @Html.PagedListPager(Model, page => Url.Action("Index", new
                                                        {
                                                            page,
                                                            sortOrder = ViewBag.CurrentSort,
                                                            currentFilter = ViewBag.CurrentFilter
                                                        }))
                                                        Cantidad de Registros: @Model.TotalItemCount
                                                    </th>
                                                    <th class="col-xs-12 col-md-3">
                                                    </th>
                                                    <th class="col-xs-12 col-md-2">
                                                    </th>
                                                    <th class="col-xs-12 col-md-1">
                                                        <a href="@Url.Action("Index", "Distrito")" class="btn btn-success">
                                                            <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                                                        </a>
                                                    </th>
                                                </tr>*@
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                        @*< !--Model Popup starts Correct-- >*@
                        <div class="container">
                            <div class="row">
                                <div class="modal fade" id="success" role="dialog">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header succes-modal">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="" id="btncancelar"><span>×</span></button>
                                            </div>

                                            <div class="modal-body">

                                                <div class="thank-you-pop">
                                                    <div class="row">
                                                        <img style="align-content:center" src="~/Content/Iconos/success.png" alt="">
                                                    </div>
                                                    <h1>
                                                        <span id="SuccessResult"></span>
                                                    </h1>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Model Popup ends-->
                        <!--Model Popup starts Incorrecto-->
                        <div class="container">
                            <div class="row">
                                <div class="modal fade" id="error" role="dialog">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header fail-modal">
                                                <button type="button" class="close" data-dismiss="modal" aria-label=""><span>×</span></button>
                                            </div>

                                            <div class="modal-body">
                                                <div class="thank-you-pop">
                                                    <div class="row">
                                                        <img src="~/Content/Iconos/error.png" alt="">
                                                    </div>

                                                    <h1>Ocurrió un error al momento de registrar</h1>
                                                    <h3 class="cupon-pop">
                                                        Error : <span id="ErrorResult"></span>
                                                    </h3>

                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Model Popup ends-->
                        <!--Model Actualizar-->
                        <div class="container">
                            <div class="row">
                                <div class="modal fade" id="dvActualizar" role="dialog">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header update-modal">
                                                <button type="button" class="close" data-dismiss="modal" aria-label=""><span>×</span></button>
                                                <h4 class="modal-title">Actualización de Distrito</h4>
                                            </div>

                                            <div class="modal-body">
                                                <div class="row">
                                                    <div class="col-xs-12 col-md-12">
                                                        <div class="col-xs-12 col-md-2">
                                                            @Html.LabelFor(model => Model.FirstOrDefault().Nombre, htmlAttributes: new { @class = "control-label" })
                                                        </div>
                                                        <input type="hidden" id="hdistritoId" value="" />
                                                        <input type="hidden" id="hdepartamentoId" value="" />
                                                        <div class="col-xs-12 col-md-8">
                                                            <input class="form-control col-xs-12 col-md-3 text-box single-line" id="ActualizarNombre" name="ActualizarNombre" type="text" value="">
                                                        </div>
                                                        <div class="col-xs-12 col-md-2">

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="modal-footer">
                                                <div class="row">
                                                    <div class="col-xs-12 col-md-12">
                                                        <div class="col-xs-12 col-md-3">
                                                            <div>
                                                                <div class="col-xs-12 col-md-3"></div>
                                                                <div class="col-xs-12 col-md-6">
                                                                    <input id="btnActualizar" value="Actualizar" class="btn btn-primary" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--Model Actualizar ends-->

                            </div>
                        </div>
                        <!--Model Actualizar ends-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}
@section Scripts
{
    @Scripts.Render("~/plugins/dataTables")
    <script src="~/Controllers/Main/Script/JDistrito.js"></script>

}


